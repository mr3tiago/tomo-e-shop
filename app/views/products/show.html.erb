<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<p>
  <strong>Note:</strong>
  <%= @product.note %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>


<%= form_tag payments_create_path do %>

  <div class="form-group">
    <%= label_tag :number %>
    <%= text_field_tag :number, '', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :cvc %>
    <%= text_field_tag :cvc, '', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :exp_month %>
    <%= select_tag :exp_month, options_for_select(1..12), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :exp_year %>
    <%= select_tag :exp_year, options_for_select(2017..2030), class: 'form-control' %>
  </div>

  <div class="text-right">
    <%= hidden_field_tag :product_id, @product.id %>
    <%= submit_tag '購入', class: 'btn btn-primary' %>
  </div>
<% end %>
